@page
@{
    Layout = null;
    ViewBag.Title = "Chat";
}

<!DOCTYPE html>
<html lang="en-US">
<head>
    <title>Voxta</title>
    <meta name="theme-color" content="#222222">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/styles/chat-page.css" rel="stylesheet">
</head>
<body>

<canvas id="audioVisualizer" width="800" height="480"></canvas>
<div id="characterButtons"></div>
<div id="message"></div>
<div class="prompt-box">
    <input type="text" id="prompt" disabled="disabled" />
</div>
<div id="notification"></div>

<script type="module" src="/scripts/chat-page.js"></script>

<script>
    if (window.chrome && window.chrome.webview) {
        document.getRootNode().addEventListener('keyup', function (e) {
            if (e.key === 'F2') {
               window.chrome.webview.postMessage(
                   JSON.stringify({
                       command: 'switchToTerminal'
                   })
               );
            }
        });
    }
</script>

</body>
</html>