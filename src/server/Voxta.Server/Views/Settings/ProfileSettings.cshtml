@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ProfileViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Settings - Profile";
}

<div class="container">
    <h1>Profile Settings</h1>
    
    <div class="card mb-3">
        <div class="card-header">
            <h2>Help</h2>
        </div>
        <div class="card-body">
            <p>Your profile is what the AI will call you, and how it will "see" you.</p>
        </div>
    </div>
    
    <form method="post" asp-action="PostProfileSettings">
        <div class="card mb-3">
            <div class="card-header">
                <h2>Configuration</h2>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label asp-for="Name">Profile name</label>
                    <input asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Description">Profile description</label>
                    <input asp-for="Description" class="form-control"/>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header">
                <h2>Default Services</h2>
            </div>
            <div class="card-body">
                <h3>Speech To Text Options</h3>
                <div class="form-check mb-3">
                    <input asp-for="PauseSpeechRecognitionDuringPlayback" type="checkbox" class="form-check-input"/>
                    <label asp-for="PauseSpeechRecognitionDuringPlayback">Pause Speech Recognition During Playback</label>
                    <div class="form-text"><div class="form-text"></div></div>
                    <span asp-validation-for="PauseSpeechRecognitionDuringPlayback" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-end mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>

        <div class="text-danger mt-3">
            @Html.ValidationSummary(false)
        </div>
    </form>
</div>