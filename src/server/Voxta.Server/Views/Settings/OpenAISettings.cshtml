@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Voxta.Services.OpenAI.OpenAISettings
@{
    Layout = "_Layout";
    ViewBag.Title = "Settings - OpenAI";
}

<div class="container">
    <h1>OpenAI Settings</h1>
    
    <div class="card mb-3">
        <div class="card-header">
            <h2>Help</h2>
        </div>
        <div class="card-body">
            <p>Login to <a href="https://platform.openai.com/account/api-keys" target="_blank">platform.openai.com</a> (not chatgpt), and create a new secret key in the API Keys page.</p>
        </div>
    </div>
    
    <form method="post" asp-action="PostOpenAISettings">
        <div class="card mb-3">
            <div class="card-header">
                <h2>Configuration</h2>
            </div>
            <div class="card-body">
                <div class="form-check mb-3">
                    <input type="checkbox" asp-for="Enabled" class="form-check-input"/>
                    <label asp-for="Enabled">Enabled</label>
                    <div class="form-text">You can disable this service if you don't want it to be selected automatically.</div>
                    <span asp-validation-for="Enabled" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ApiKey">OpenAI key</label>
                    <input asp-for="ApiKey" class="form-control"/>
                    <span asp-validation-for="ApiKey" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Model">OpenAI model</label>
                    <input asp-for="Model" class="form-control"/>
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-end mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>

        <div class="text-danger mt-3">
            @Html.ValidationSummary(false)
        </div>
    </form>
</div>