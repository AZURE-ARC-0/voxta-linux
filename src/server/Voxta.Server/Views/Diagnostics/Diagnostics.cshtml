@model DiagnosticsViewModel;
@{
    Layout = "_Layout";
    ViewBag.Title = "Diagnostics";
}

<div class="container">
    <h1 class="mb-4">Diagnostics</h1>

    <div class="card mb-4">
        <div class="card-header">
            <h2>Services</h2>
        </div>
        @if (Model.Services != null)
        {
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th scope="col">Status</th>
                        <th scope="col">Service</th>
                        <th scope="col">Message</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var s in Model.Services)
                    {
                        <tr>
                            <td>
                                @if (!s.IsReady)
                                {
                                    <i class="bi bi-dash-circle-fill text-secondary"></i>
                                }
                                else if (s.IsHealthy)
                                {
                                    <i class="bi bi-check-circle-fill text-success"></i>
                                }
                                else
                                {
                                    <i class="bi bi-exclamation-circle-fill text-danger"></i>
                                }
                            </td>
                            <td>@s.Name</td>
                            <td><code><pre>@s.Status</pre></code></td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        }
        <div class="card-footer">
            <div class="d-flex justify-content-center text-center">
                <form action="/diagnostics" method="post">
                    <input type="hidden" name="test" value="true"/>
                    <p class="text-muted pl-2">Click once and wait for the results, it may take some time.</p>
                    <button type="submit" class="btn btn-primary">Test Now</button>
                </form>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h2>Performance Metrics</h2>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">Metric</th>
                    <th scope="col">Average Elapsed Time</th>
                </tr>
                </thead>
                <tbody>
                @if (Model.PerformanceMetrics.Length == 0)
                {
                    <tr>
                        <td colspan="2">No metrics recorded. Run tests or start a chat to generate metrics.</td>
                    </tr>
                }
                @foreach (var m in Model.PerformanceMetrics)
                {
                    <tr>
                        <td>@m.Key</td>
                        <td>@m.Avg.ToString("g")</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
