@model Voxta.Server.ViewModels.ServiceSettings.OpenAISettingsViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Settings - OpenAI";
}

<div class="container">
    <h1>OpenAI Settings</h1>
    
    <div class="card mb-3">
        <div class="card-header">
            <h2>Help</h2>
        </div>
        <div class="card-body">
            <p>Login to <a href="https://platform.openai.com/account/api-keys" target="_blank">platform.openai.com</a> (not chatgpt), and create a new secret key in the API Keys page.</p>
        </div>
    </div>
    
    <form id="configureForm" method="post" asp-action="PostOpenAISettings">
        <div class="card mb-3">
            <div class="card-header">
                <h2>Configuration</h2>
            </div>
            <div class="card-body">
                <div class="form-check mb-3">
                    <input type="checkbox" asp-for="Enabled" class="form-check-input"/>
                    <label asp-for="Enabled">Enabled</label>
                    <div class="form-text">You can disable this service if you don't want it to be selected automatically.</div>
                    <span asp-validation-for="Enabled" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ApiKey">OpenAI API key</label>
                    <input asp-for="ApiKey" class="form-control"/>
                    <span asp-validation-for="ApiKey" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Model">Model</label>
                    <input asp-for="Model" class="form-control"/>
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
                <partial name="ServiceSettings/_LLMServiceSettings" model="@Model" />
                <partial name="ServiceSettings/_JSONParametersServiceSettings" model="@Model" />
            </div>
        </div>

        <partial name="ServiceSettings/_FormFooter" model="@Url.Action("ResetNovelAISettings")" />
    </form>
</div>
