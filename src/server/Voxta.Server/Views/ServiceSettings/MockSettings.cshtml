@model ConfiguredService<Voxta.Services.Mocks.MockSettings>
@{
    Layout = "_Layout";
    ViewBag.Title = "Settings - Mock";
}

<div class="container">
    <h1>Mock Settings</h1>
    
    <div class="card mb-3">
        <div class="card-header">
            <h2>Help</h2>
        </div>
        <div class="card-body">
            <p>This is used for testing. The STT will generate a beep, and text gen will simply echo what you say.</p>
        </div>
    </div>
    
    <form id="configureForm" method="post" asp-action="PostMockSettings">
        <div class="card mb-3">
            <div class="card-header">
                <h2>Configuration</h2>
            </div>
            <div class="card-body">
                <div class="form-check mb-3">
                    <input type="checkbox" asp-for="Enabled" class="form-check-input"/>
                    <label asp-for="Enabled">Enabled</label>
                    <div class="form-text">You can disable this service if you don't want it to be selected automatically.</div>
                    <span asp-validation-for="Enabled" class="text-danger"></span>
                </div>
            </div>
        </div>

        <partial name="ServiceSettings/_FormFooter" model="@Url.Action("DeleteMockSettings")" />
    </form>
</div>
