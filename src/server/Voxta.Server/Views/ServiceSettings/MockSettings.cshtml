@model Voxta.Server.ViewModels.ServiceSettings.MockSettingsViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Settings - Mock";
}

<div class="container">
    <h1>Mock Settings</h1>
    
    <div class="card mb-3">
        <div class="card-header">
            <h2>Help</h2>
        </div>
        <div class="card-body">
            <p>This is used for testing. The STT will generate a beep, and text gen will simply echo what you say.</p>
        </div>
    </div>
    
    <form id="configureForm" method="post" asp-action="PostMockSettings">
        <partial name="ServiceSettings/_CommonSettings" model="@Model"/>

        <div class="card mb-3">
            <div class="card-header">
                <h2>Configuration</h2>
            </div>
            <div class="card-body">
                <i>There are not configurations for this service.</i>
            </div>
        </div>

        <partial name="ServiceSettings/_FormFooter" model="@Model"/>
    </form>
</div>
