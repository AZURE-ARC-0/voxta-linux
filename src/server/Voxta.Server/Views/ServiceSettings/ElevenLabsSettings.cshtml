@model Voxta.Server.ViewModels.ServiceSettings.ElevenLabsSettingsViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Settings - ElevenLabs";
}

@section head {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jsoneditor/9.10.2/jsoneditor.min.css" integrity="sha512-brXxIa/fpMfluh8HUWyrNssKy/H0oRzA0HhmipgfVwbXPamMUTZn1jEsvoGGwJYCRpSx4idujdul4vFwWgPROA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/styles/jsoneditor-dark.css" asp-append-version="true" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jsoneditor/9.10.2/jsoneditor-minimalist.js" integrity="sha512-H0X4c02ARmY4wCJ2CzRFfKWnB6ZrLFqsD9JYB3ljTOCtjSJB63Nfq/GUumYW3NMQRX3R2B8BH56DAywT4tQv6w==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/scripts/components/json-editor.js" asp-append-version="true"></script>
}

<div class="container">
    <h1>ElevenLabs Settings</h1>
    
    <div class="card mb-3">
        <div class="card-header">
            <h2>Help</h2>
        </div>
        <div class="card-body">
            <p>Go to <a href="https://elevenlabs.io/subscription" target="_blank">elevenlabs.io</a>, click on your profile icon and select Profile. You'll find the API Key there.</p>
        </div>
    </div>
    
    <form id="configureForm" method="post" asp-action="PostElevenLabsSettings">
        <div class="card mb-3">
            <div class="card-header">
                <h2>Configuration</h2>
            </div>
            <div class="card-body">
                <div class="form-check mb-3">
                    <input type="checkbox" asp-for="Enabled" class="form-check-input"/>
                    <label asp-for="Enabled">Enabled</label>
                    <div class="form-text">You can disable this service if you don't want it to be selected automatically.</div>
                    <span asp-validation-for="Enabled" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="ApiKey">API key</label>
                    <input asp-for="ApiKey" class="form-control"/>
                    <span asp-validation-for="ApiKey" class="text-danger"></span>
                </div>
            </div>
        </div>
        
        <div class="card mb-3">
            <div class="card-header">
                <h2>Speech Configuration</h2>
            </div>
            <div class="card-body">
                <div class="mb-2">
                    <label asp-for="Model">Model</label>
                    <select asp-for="Model" class="form-control">
                        <option value="eleven_monolingual_v1">Monolingual v1</option>
                        <option value="eleven_multilingual_v1">Multilingual v1</option>
                    </select>
                    <div class="form-text">The multilingual model is used when the culture is not en-US.</div>
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="ThinkingSpeech">Thinking speech</label>
                    <textarea rows="6" asp-for="ThinkingSpeech" class="form-control"></textarea>
                    <div class="form-text">Those are generated sounds while the AI thinks and speech gets generated. One per line.</div>
                    <span asp-validation-for="ThinkingSpeech" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Parameters">Voice settings</label>
                    <input type="hidden" asp-for="Parameters" class="form-control"/>
                    <div id="jsoneditor" class="jsoneditor" style="width: 100%; height: 80px;"></div>
                    <div class="form-text"><a href="https://docs.elevenlabs.io/speech-synthesis/voice-settings" target="_blank">Voice Settings Documentation</a></div>
                </div>
                <div class="form-check">
                    <input asp-for="UseDefaults" type="checkbox" class="form-check-input"/>
                    <label asp-for="UseDefaults">Use default parameters</label>
                    <div class="form-text">Will ignore any changes you make on the voice settings and use the default values instead.</div>
                    <span asp-validation-for="UseDefaults" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-end mt-3">
            <a href="/settings" class="btn btn-secondary me-2">Back to settings</a>
            <button id="resetBtn" class="btn btn-secondary me-2">Reset</button>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>

        <div class="text-danger mt-3">
            @Html.ValidationSummary(false)
        </div>
    </form>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        initJsonEditor(document.getElementById("configureForm"), document.getElementById("Parameters"), document.getElementById("UseDefaults"));
            
        document.getElementById('resetBtn').addEventListener('click', async (e) => {
            e.preventDefault();
            if (!confirm('Are you sure you want to reset the settings?')) { return; }
            await fetch('@Url.Action("ResetNovelAISettings")', { method: 'POST' });
            location.reload();
        });
    });
</script>

