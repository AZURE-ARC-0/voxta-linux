@model Voxta.Server.ViewModels.ServiceSettings.WindowsSpeechSettingsViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Settings - Windows Speech";
}

<div class="container">
    <h1>Windows Speech Settings</h1>
    
    <div class="card mb-3">
        <div class="card-header">
            <h2>Help</h2>
        </div>
        <div class="card-body">
            <p>This uses the built-in Windows speech tools.</p>
        </div>
    </div>
    
    <form id="configureForm" method="post" asp-action="PostWindowsSpeechSettings">
        <div class="card mb-3">
            <div class="card-header">
                <h2>Configuration</h2>
            </div>
            <div class="card-body">
                <div class="form-check mb-3">
                    <input type="checkbox" asp-for="Enabled" class="form-check-input"/>
                    <label asp-for="Enabled">Enabled</label>
                    <div class="form-text">You can disable this service if you don't want it to be selected automatically.</div>
                    <span asp-validation-for="Enabled" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-end mt-3">
            <button id="resetBtn" class="btn btn-secondary me-2">Reset</button>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>

        <div class="text-danger mt-3">
            @Html.ValidationSummary(false)
        </div>
    </form>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        document.getElementById('resetBtn').addEventListener('click', async (e) => {
            e.preventDefault();
            if (!confirm('Are you sure you want to reset the settings?')) { return; }
            await fetch('@Url.Action("ResetNovelAISettings")', { method: 'POST' });
            location.reload();
        });
    });
</script>