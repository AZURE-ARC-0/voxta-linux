@model Voxta.Server.ViewModels.ServiceSettings.WindowsSpeechSettingsViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Settings - Windows Speech";
}

<div class="container">
    <h1>Windows Speech Settings</h1>
    
    <div class="card mb-3">
        <div class="card-header">
            <h2>Help</h2>
        </div>
        <div class="card-body">
            <p>This uses the built-in Windows speech tools.</p>
        </div>
    </div>
    
    <form id="configureForm" method="post" asp-action="PostWindowsSpeechSettings">
        <div class="card mb-3">
            <div class="card-header">
                <h2>Configuration</h2>
            </div>
            <div class="card-body">
                <div class="form-check mb-3">
                    <label asp-for="Enabled">Enabled</label>
                    <input type="checkbox" asp-for="Enabled" class="form-check-input"/>
                    <div class="form-text">You can disable this service if you don't want it to be selected automatically.</div>
                    <span asp-validation-for="Enabled" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="MinimumConfidence">Minimum Confidence</label>
                    <input asp-for="MinimumConfidence" class="form-control"/>
                    <div class="form-text">Value between 0 and 1, filters low confidence results.</div>
                    <span asp-validation-for="MinimumConfidence" class="text-danger"></span>
                </div>
            </div>
        </div>

        <partial name="ServiceSettings/_FormFooter" model="@Url.Action("ResetWindowsSpeechSettings")" />
    </form>
</div>
