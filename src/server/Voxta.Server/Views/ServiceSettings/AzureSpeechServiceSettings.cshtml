@model ConfiguredService<Voxta.Services.AzureSpeechService.AzureSpeechServiceSettings>
@{
    Layout = "_Layout";
    ViewBag.Title = "Settings - Azure Speech Service";
}

<div class="container">
    <h1>Azure Speech Service Settings</h1>
    
    <div class="card mb-3">
        <div class="card-header">
            <h2>Help</h2>
        </div>
        <div class="card-body">
            <p>Go to <a href="https://portal.azure.com/#view/Microsoft_Azure_ProjectOxford/CognitiveServicesHub/~/SpeechServices" target="_blank">portal.azure.com</a>, find your Speech Service and go to <code>Keys and Endpoint</code>. There you will find the Keys and Region.</p>
        </div>
    </div>
    
    <form id="configureForm" method="post" asp-action="PostAzureSpeechServiceSettings">
        <input type="hidden" asp-for="ServiceName" />
        <div class="card mb-3">
            <div class="card-header">
                <h2>Configuration</h2>
            </div>
            <div class="card-body">
                <div class="form-check mb-3">
                    <input type="checkbox" asp-for="Enabled" class="form-check-input"/>
                    <label asp-for="Enabled">Enabled</label>
                    <div class="form-text">You can disable this service if you don't want it to be selected automatically.</div>
                    <span asp-validation-for="Enabled" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Settings.SubscriptionKey">Subscription Key</label>
                    <input asp-for="Settings.SubscriptionKey" class="form-control"/>
                    <span asp-validation-for="Settings.SubscriptionKey" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Settings.Region">Region</label>
                    <input asp-for="Settings.Region" class="form-control"/>
                    <span asp-validation-for="Settings.Region" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Settings.LogFilename">Log Filename</label>
                    <input asp-for="Settings.LogFilename" class="form-control"/>
                    <div class="form-text">Only enable this if you have problems with the service. Enter a full path.</div>
                    <span asp-validation-for="Settings.LogFilename" class="text-danger"></span>
                </div>
                <div class="form-check">
                    <input type="checkbox" asp-for="Settings.FilterProfanity" class="form-check-input"/>
                    <label asp-for="Settings.FilterProfanity">Filter Profanity</label>
                    <div class="form-text">Whether to remove profanity from tts and stt.</div>
                    <span asp-validation-for="Settings.FilterProfanity" class="text-danger"></span>
                </div>
                <div class="form-check">
                    <input type="checkbox" asp-for="Settings.Diarization" class="form-check-input"/>
                    <label asp-for="Settings.Diarization">Diarization</label>
                    <div class="form-text">Uses the conversation transcriber. Much slower than the normal recognizer, but can filter out other speakers.</div>
                    <span asp-validation-for="Settings.Diarization" class="text-danger"></span>
                </div>
            </div>
        </div>

        <partial name="ServiceSettings/_FormFooter" model="@Url.Action("DeleteAzureSpeechServiceSettings")"/>
    </form>
</div>
