<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Voxta - @ViewBag.Title</title>
    <meta name="theme-color" content="#222222">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/styles/style.css" asp-append-version="true" rel="stylesheet">
    @await RenderSectionAsync("head", required: false)
    <script src="~/scripts/common.js" asp-append-version="true"></script>
</head>
<body>

<div id="logo" class="logo user-select-none">
    <a href="/" class="btn btn-dark"><strong>Voxta</strong></a>
</div>

<div class="menu">
    <div class="dropdown">
        <a class="btn btn-dark dropdown-toggle menu" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
            Menu
        </a>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            <li>
                <a class="dropdown-item" href="@Url.Action("Chat", "Chat")"><i class="bi bi-chat"></i> Chat</a>
            </li>
            <li>
                <a class="dropdown-item" href="@Url.Action("Settings", "Settings")"><i class="bi bi-gear"></i> Settings</a>
            </li>
            <li>
                <a class="dropdown-item" href="@Url.Action("Characters", "Characters")"><i class="bi bi-people"></i> Characters</a>
            </li>
            <li>
                <a class="dropdown-item" href="@Url.Action("Chats", "Chats")"><i class="bi bi-clock-history"></i> Chats History</a>
            </li>
            <li>
                <a class="dropdown-item" href="@Url.Action("Diagnostics", "Diagnostics")"><i class="bi bi-clipboard-pulse"></i> Diagnostics</a>
            </li>
            <li>
                <a class="dropdown-item" href="@Url.Action("TextToSpeech", "Playground")"><i class="bi bi-music-note-beamed"></i> Playground</a>
            </li>
            <li>
                <a class="dropdown-item" href="@Url.Action("Safety", "Home")"><i class="bi bi-cone-striped"></i> AI Safety</a>
            </li>
            <li>
                <a class="dropdown-item" href="@Url.Action("Support", "Home")"><i class="bi bi-heart"></i> Support the project</a>
            </li>
        </ul>
    </div>
</div>

@RenderBody()

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>