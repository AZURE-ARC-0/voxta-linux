@model DiagnosticsViewModel;
@{
    Layout = "_Layout";
    ViewBag.Title = "Diagnostics";
}

<div class="container">
    <h2>Services: </h2>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Status</th>
            <th scope="col">Service</th>
            <th scope="col">Message</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var s in Model.Services)
        {
            <tr>
                <td>
                    @if (!s.IsReady)
                    {
                        <i class="bi bi-dash-circle-fill text-secondary"></i>
                    }
                    @if (s.IsHealthy)
                    {
                        <i class="bi bi-check-circle-fill text-success"></i>
                    }
                    else
                    {
                        <i class="bi bi-exclamation-circle-fill text-danger"></i>
                    }
                </td>
                <td>@s.Name</td>
                <td><code><pre>@s.Status</pre></code></td>
            </tr>
        }
        </tbody>
    </table>
    
    <h2>Performance Metrics: </h2>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Metric</th>
            <th scope="col">Average Elapsed Time</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var m in Model.PerformanceMetrics)
        {
            <tr>
                <td>@m.Key</td>
                <td>@m.Avg.ToString("g")</td>
            </tr>
        }
        </tbody>
    </table>

</div>