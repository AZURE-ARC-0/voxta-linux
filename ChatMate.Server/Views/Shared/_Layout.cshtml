<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - ChatMate</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-dark-5@1.1.3/dist/css/bootstrap-dark.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <meta name="theme-color" content="#222222">
    <style>
        body, html {
            background-color: rgb(34, 34, 34);
            height: 100%;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
        }
    </style>
    @await RenderSectionAsync("styles", required: false)
</head>
<body>

<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark py-2">
        <div class="container d-flex justify-content-between">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">ChatMate</a>
            <ul class="navbar-nav">
                <li class="nav-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                    <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
                </li>
                <li class="nav-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Chat" ? "active" : "")">
                    <a class="nav-link" href="@Url.Action("Chat", "Chat")">Chat</a>
                </li>
                <li class="nav-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Settings" ? "active" : "")">
                    <a class="nav-link" href="@Url.Action("Settings", "Settings")">Settings</a>
                </li>
                <li class="nav-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Bots" ? "active" : "")">
                    <a class="nav-link" href="@Url.Action("Bots", "Bots")">Bots</a>
                </li>
                <li class="nav-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Diagnostics" ? "active" : "")">
                    <a class="nav-link" href="@Url.Action("Diagnostics", "Diagnostics")">Diagnostics</a>
                </li>
            </ul>
        </div>
    </nav>
</header>

@RenderBody()

</body>
</html>